@model SliderCreateVM

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong>Create</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class=" form-control-label">Enter slider image</label>
                    <input asp-for="Images" class="form-control">
                    <span class="text-danger" asp-validation-for="Images" ></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                </a>
            </form>
        </div>
    </div>
</div>

